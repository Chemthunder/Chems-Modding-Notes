@Override
    public ActionResult use(World world, PlayerEntity user, Hand hand) {
        ItemStack stack = user.getMainHandStack();
        if (world instanceof ServerWorld serverWorld) {
            if (user.experienceLevel > 0) {
                user.addExperienceLevels(-1);
                user.addVelocity(user.getRotationVec(0).multiply(5));
                user.velocityModified = true;
                user.getItemCooldownManager().set(stack, 30);
                user.playSound(NorthSounds.SWOOSH);
            } else {
                user.addVelocity(user.getRotationVec(0).multiply(5));
                user.velocityModified = true;
                user.damage(serverWorld, NorthDamageTypes.throngled(user), 4f);
            }
            return super.use(world, user, hand);
        }
        return null;
    }